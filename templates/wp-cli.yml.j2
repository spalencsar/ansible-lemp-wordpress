# WP-CLI Configuration
path: {{ wordpress_path }}
url: {{ wordpress_url | default('http://localhost') }}
user: {{ nginx_user }}
color: auto
debug: false
quiet: false

# Core settings
core config:
  dbname: {{ wordpress_db_name }}
  dbuser: {{ wordpress_db_user }}
  dbpass: {{ wordpress_db_password }}
  dbhost: localhost

# Apache/Nginx integration
apache_modules:
  - mod_rewrite

# Custom commands and aliases
aliases:
  st: status
  co: config
  pl: plugin
  th: theme
